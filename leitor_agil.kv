#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import utils kivy.utils
#:import platform kivy.utils.platform

<Manager>:
    transition: FadeTransition()
    Inicio:
        name:'inicio'
    Exibidor:
        name:'exibir'
    Escolha:
        name:'escolha'
    Config:
        name: 'config'

<Bt_conf@ButtonBehavior+Image>:
    source: 'config.png'
    size_hint: .1, .06
    pos_hint:{"right":1, "top":1}
    color: app._2

<Inicio>:
    canvas:
        Color:
            rgb: app._1
        Rectangle:
            size:self.size
            pos:self.pos

    Bt_conf:
        on_press: app.root.current = 'config'

    BoxLayout:
        size: root.width, root.height
        padding: root.width/10, root.height/2.2

        Button:
            text: 'ESCOLHER ARQUIVO'
            color: app._1
            background_normal: ''
            background_color: app._2
            on_press: app.root.current = 'escolha'

<Escolha>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: sp(52)

            Button:
                text:'<'
                size_hint_x:.2
                on_press: app.root.current = 'inicio'
            Button:
                text: 'Icon View'
                on_press: fc.view_mode = 'icon'
            Button:
                text: 'List View'
                on_press: fc.view_mode = 'list'

        FileChooser:
            rootpath: '/storage/emulated/0' if platform == 'android' else '/'
            id: fc
            filters:['*.txt', '*.pdf', '*.docx']
            on_selection: root.escolha(fc.selection[0]) if fc.selection else ''
            FileChooserIconLayout
            FileChooserListLayout

<Bt@ButtonBehavior+Label>:
    text:'<'
    font_size:50
    color: app._2
    size_hint: .1, .06

<Bt_girar@ButtonBehavior+Image>:
    source: 'girar.png'
    size_hint: .1, .06
    color: app._2

<Bt_play@ButtonBehavior+Image>:
    source: 'play.png'
    size_hint: .2, .08
    color: app._2

<Exibidor>:
    canvas:
        Color:
            rgb: app._1
        Rectangle:
            size:self.size
            pos:self.pos

    Bt:
        pos_hint: root.bt
        on_press: root.voltar()
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.rotacao
                origin: self.center
        canvas.after:
            PopMatrix

    Bt_girar:
        pos_hint: root.bt_girar
        on_press: root.girar()
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.rotacao
                origin: self.center
        canvas.after:
            PopMatrix

    Bt_play:
        id:'play'
        pos_hint: root.bt_play
        on_press: root.play()
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.rotacao
                origin: self.center
        canvas.after:
            PopMatrix

    BoxLayout:
        size: root.width, root.height
        padding: root.width/10, root.height/2.2

        Label:
            id:texto
            text:''
            font_size:50
            color: app._2
            canvas.before:
                PushMatrix
                Rotate:
                    angle: root.rotacao
                    origin: self.center
            canvas.after:
                PopMatrix

<Config@Screen>:
    canvas:
        Color:
            rgb: app._1
        Rectangle:
            size:self.size
            pos:self.pos
    

    BoxLayout:
        orientation: 'vertical'
        Bt:
            on_press: app.root.current = 'inicio'
            size_hint: .1, .15

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .25

            Label:
                text:'NÚMERO DE PALAVRAS POR MINUTO'
                font_size:20
                color: app._2
            VelInput:
                size_hint: .25, 1.2
                input_type: 'number'
                font_size:30
                pos_hint:{"center_x":.5, "center_y":.5}
                id:'vel'
                text:'300'
            Label:
                text:'Min:1      Max:1000'
                color: app._2

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .2

        BoxLayout:
            orientation: 'vertical'
            Label:
                text:'PREDEFINIÇÕES DE CORES'
                color: app._2
                font_size:20
                
            Button:
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                text:'[b]BRANCO E PRETO[/b]'
                markup: True
                color: [0,0,0,1]
                background_normal: ''
                background_color: [1,1,1,1]
                on_press: app._1, app._2 = [1,1,1,1], [0,0,0,1]
            Button:
                text:'[b]PRETO E BRANCO[/b]'
                markup: True
                color: [1,1,1,1]
                background_normal: ''
                background_color: [0,0,0,1]
                on_press: app._1, app._2 = [0,0,0,1], [1,1,1,1]
            Button:
                text:'[b]AZUL E LARANJA[/b]'
                markup: True
                color: [1.0, 0.6, 0.0, 1.0]
                background_normal: ''
                background_color: [0.07450980392156863, 0.09803921568627451, 0.12941176470588237, 1.0]
                on_press: app._1, app._2 = [0.07450980392156863, 0.09803921568627451, 0.12941176470588237, 1.0], [1.0, 0.6, 0.0, 1.0]
            Button:
                text:'[b]VERDE E AMARELO[/b]'
                markup: True
                color: [254/255, 224/255, 0/255, 1]
                background_normal: ''
                background_color: [0/255, 156/255, 55/255, 1]
                on_press: app._1, app._2 = [0/255, 156/255, 55/255, 1], [254/255, 224/255, 0/255, 1]
            Button:
                text:'[b]ROSA E AZUL[/b]'
                markup: True
                color: [234/255, 73/255, 147/255, 1]
                background_normal: ''
                background_color: [76/255, 179/255, 213/255, 1]
                on_press: app._1, app._2 = [76/255, 179/255, 213/255, 1], [234/255, 73/255, 147/255, 1]